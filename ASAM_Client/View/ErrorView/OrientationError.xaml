<Window x:Class="ASAM_Client.View.ErrorView.OrientationError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASAM_Client.View.ErrorView"
        mc:Ignorable="d"
        Title="Erreur d'orientation d'écran" Height="800" Width="450" WindowState="Maximized" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False" Background="#2e75d8">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"
                   FontWeight="Bold" FontFamily="Microsoft YaHei UI" 
                   Text="Veuillez remettre l'écran dans le bon sens pour continuer" 
                   TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="10"/>
    </Grid>
</Window>
